# MongoDB
MONGODB_URI=mongodb://user:localpassword@localhost:27017/
MONGODB_DB=sensai-local
MONGODB_COLLECTION=germanConfiguration
MONGODB_LOCALE_FIELD=locale

# LM Studio (OpenAI-compatible server)
LMSTUDIO_BASE_URL=http://localhost:1234/v1
LMSTUDIO_MODEL=mistralai/ministral-3-3b
# LMSTUDIO_API_KEY=
LMSTUDIO_TIMEOUT_S=120

# Locales
SOURCE_LOCALE=en-AU
TARGET_LOCALE=de-DE

# Processing
DRY_RUN=false
# MAX_DOCS=100

# Locking / audit fields
LOCK_FIELD=_localiserLock
LOCK_LEASE_S=300
PROCESSED_MARK_FIELD=_localiserProcessedAt
ERROR_FIELD=_localiserLastError

# LLM behavior
LLM_MAX_RETRIES=3
LLM_TEMPERATURE=0.2
